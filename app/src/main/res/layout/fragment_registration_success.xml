<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_xlarge_margin"
            android:text="@string/email_registration_success"
            android:textColor="@color/grey_dark"
            android:textSize="36sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_large_margin"
            android:paddingLeft="@dimen/generic_large_padding"
            android:paddingStart="@dimen/generic_large_padding"
            android:paddingRight="@dimen/generic_large_padding"
            android:paddingEnd="@dimen/generic_large_padding"
            android:gravity="center_horizontal"
            android:text="@string/email_registration_success_info"
            android:textColor="@color/grey_dark"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/registration_get_started_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/generic_button_height"
            android:minWidth="225dp"
            android:layout_marginTop="@dimen/generic_xxlarge_margin"
            android:text="@string/email_registration_get_started"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/rounded_bima_blue_bg_selector"/>

    </LinearLayout>

</layout>