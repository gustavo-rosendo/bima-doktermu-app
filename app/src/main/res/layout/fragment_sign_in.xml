<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/generic_large_padding"
            android:paddingBottom="@dimen/generic_xlarge_padding"
            android:paddingLeft="@dimen/generic_xlarge_padding"
            android:paddingStart="@dimen/generic_xlarge_padding"
            android:paddingRight="@dimen/generic_large_padding"
            android:paddingEnd="@dimen/generic_large_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sign_in_facebook_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/generic_button_height"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/generic_large_margin"
                    android:text="@string/sign_in_fb"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_fb_blue_bg_selector"/>

                <Button
                    android:id="@+id/sign_in_gplus_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/generic_button_height"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/generic_normal_margin"
                    android:layout_marginStart="@dimen/generic_normal_margin"
                    android:layout_marginBottom="@dimen/generic_large_margin"
                    android:text="@string/sign_in_gplus"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_gplus_red_bg_selector"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/generic_large_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/generic_separator_height"
                    android:layout_weight="1"
                    android:background="@color/grey_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/generic_normal_margin"
                    android:layout_marginLeft="@dimen/generic_normal_margin"
                    android:layout_marginRight="@dimen/generic_normal_margin"
                    android:layout_marginEnd="@dimen/generic_normal_margin"
                    android:text="@string/or"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/generic_subheading_text_size"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/generic_separator_height"
                    android:layout_weight="1"
                    android:background="@color/grey_dark"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_in_email_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/generic_xlarge_margin">

                <EditText
                    android:id="@+id/sign_in_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:textSize="@dimen/generic_subheading_text_size"
                    android:inputType="textEmailAddress"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_in_password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/generic_large_margin">

                <EditText
                    android:id="@+id/sign_in_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:textSize="@dimen/generic_subheading_text_size"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/generic_button_height"
                android:minWidth="150dp"
                android:layout_marginTop="@dimen/generic_xlarge_margin"
                android:layout_gravity="center_horizontal"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/generic_button_text_size"
                android:background="@drawable/rounded_bima_blue_bg_selector"/>

            <LinearLayout
                android:id="@+id/sign_in_whats_my_password_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/generic_large_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/whats_my_password"
                    android:textAllCaps="true"
                    android:textColor="@color/bima_blue"
                    android:textSize="@dimen/generic_subheading_text_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bima_blue"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>