<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/generic_xlarge_padding"
        android:orientation="vertical"
        android:background="@drawable/loading_bg">

        <ImageView
            android:id="@+id/loading_bima_icon"
            android:layout_width="@dimen/loading_bima_icon_width"
            android:layout_height="@dimen/loading_bima_icon_height"
            android:layout_above="@+id/loading_bima_text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bima_logo_icon"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/loading_bima_text"
            android:layout_width="@dimen/loading_bima_text_width"
            android:layout_height="@dimen/loading_bima_text_height"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bima_logo_text"
            android:contentDescription="@string/app_name"/>

    </RelativeLayout>

</layout>