<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="300dp"
        android:paddingLeft="@dimen/generic_large_padding"
        android:paddingStart="@dimen/generic_large_padding"
        android:paddingRight="@dimen/generic_large_padding"
        android:paddingEnd="@dimen/generic_large_padding"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/dialog_bg">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/generic_large_padding"
            android:paddingStart="@dimen/generic_large_padding"
            android:paddingRight="@dimen/generic_large_padding"
            android:paddingEnd="@dimen/generic_large_padding"
            android:layout_marginTop="@dimen/generic_large_margin"
            android:gravity="center"
            android:text="@string/dialog_change_password"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_xlarge_margin"
            android:text="@string/dialog_old_password"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/generic_separator_height"
            android:layout_marginTop="@dimen/generic_normal_margin"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/edit_old_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_normal_margin"
            android:hint="@string/dialog_old_password"
            android:inputType="textPassword"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_large_margin"
            android:text="@string/dialog_new_password"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/generic_separator_height"
            android:layout_marginTop="@dimen/generic_normal_margin"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/edit_new_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_normal_margin"
            android:hint="@string/dialog_new_password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/edit_validate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_large_margin"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="end"
            android:text="@string/dialog_validate"
            android:textColor="@color/bima_blue"
            android:textSize="16sp"/>

    </LinearLayout>

</layout>